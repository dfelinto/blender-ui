	body.loading
		section.ui-section.intro
			.theme-select Flatty Theme Variants:
				a.theme-main(href="javascript:void(0);", onclick="swapTheme('assets/css/main.css', 0);") Dark
				a.theme-alt(href="javascript:void(0);", onclick="swapTheme('assets/css/main_alt.css', 0);") Light

